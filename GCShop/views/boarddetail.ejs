<div class="container">
    
    <form action="/board/create_process" method="post" >
        <input type = "hidden" name="type_id" value = "">
        <input type = "hidden" name="loginid" value = "">
        <div class="mb-3">
            <label class="form-label" for="id">제목</label> 
            <input class="form-control" type="text" name="title" value = "<%-boards[0].title%>" style = "width:300px;" disabled/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id">작성자</label> 
            <input class="form-control" type="text" name="title" value = "<%-boards[0].name%>" style = "width:300px;" disabled/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id">작성일</label> 
            <input class="form-control" type="text" name="date" value = "<%-boards[0].date%>" style = "width:300px;" disabled/>
        </div>
        <div class="mb-3">
            <label class="form-label" for="id">내용</label> 
            <textarea class="form-control" name="content" style="width:800px;height: 200px;" disabled><%- boards[0].content %></textarea>
        </div>        
        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
            <a href="/board/view/<%-boards[0].type_id%>/<%- pNum %>"> <button type="button" class="btn btn-info me-md-2">목록</button> </a>
            <% if(cls !== 'NON' && loginid == boards[0].loginid || cls == 'MNG') {%>
            <a href="/board/update/<%- boards[0].board_id %>/<%- boards[0].type_id %>/<%- pNum %>"> 
                <button type="button" class="btn btn-info me-md-2">수정</button> </a>
            <a href="/board/delete/<%- boards[0].board_id %>/<%- boards[0].type_id %>/<%- pNum %>" onclick="if(confirm('정말로 삭제하시겠습니까?')==false) return false"> 
                <button type="button" class="btn btn-info me-md-2">삭제</button> </a>
            <% } %>
        </div>
    </form>
</div>
