<table class="table table-bordered" style="width: 100%; text-align: center;">
    <thead class="table-primary" style="text-align: center;">
    <% var i = 1; while(i < tables.length) { %>
        <th><%- tables[i].COLUMN_COMMENT %></th>
        <% i++; } %>
        <th colspan="3"></th>
    </thead>
        <% var j = 0; while(j < results.length) { %>
        <tr>
            <% var i = 1; while(i < tables.length) { const columnName = tables[i].COLUMN_NAME;%>
            <td style="vertical-align: middle;">
                
                <%- results[j][columnName]%>
            </td>
            <% i++; } %>
            <td style="vertical-align: middle;"><a href="#">생성</a></td>
            <td style="vertical-align: middle;"><a href="#">수정</a></td>
            <td style="vertical-align: middle;"><a href="#" onclick="if(confirm('정말로 삭제하시겠습니까?')==false) return false">삭제</a></td>
        </tr>
        <% j++; } %>
</table>
<% if (results.length === 0) { %>
    <p>자료가 없습니다. </p>
 <% } %>
