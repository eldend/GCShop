<table class="table table-bordered" style="width: 100%; text-align: center;">
    <thead class="table-primary" style="text-align: center;">
        <th>고객ID</th>
        <th>고객명</th>
        <th>상품ID</th>
        <th>상품명</th>
        <th>구매일</th>
        <th>가격</th>
        <th>포인트</th>
        <th>구매량</th>
        <th>총가격</th>
        <th>지불여부</th>
        <th>취소여부</th>
        <th>환불여부</th>
        <th colspan="2"></th>  
    </thead>
    <% var i = 0; while(i < purchases.length) { %>
    <tr>
        <td style="vertical-align: middle;">
            <%- purchases[i].loginid %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].person_name %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].mer_id %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].product_name %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].date %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].price %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].point %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].qty %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].total %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].payYN %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].cancel %>
        </td>
        <td style="vertical-align: middle;">
            <%- purchases[i].refund %>
        </td>
        <td><a href="/purchaseupdate/<%- purchases[i].purchase_id %>">수정</a></td>
        <td><a href="/purchasedelete/<%- purchases[i].purchase_id %>" onclick="if(confirm('정말로 삭제하시겠습니까?')==false) return false">삭제</a></td>
    </tr>
    <% i++; } %>
</table>
<% if (purchases.length === 0) { %>
    <p>자료가 없습니다. </p>
 <% } %>
<style>
.button-group {
    display: flex;
    justify-content: flex-end;
    gap: 10px;
    margin-top: 20px;
}
</style>
